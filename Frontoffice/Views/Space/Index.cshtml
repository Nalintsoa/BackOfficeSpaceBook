@{
}

<section id="gallery">
    <div class="container mt-5">
        <div class="row">
            <h3>Salles disponibles</h3>
        </div>
        <div class="row mt-3">
            @foreach (System.Data.DataRow row in Model.Rows)
            {
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <img src="@row["Filename"]" alt="" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">@row["SpaceName"]</h5>
                            <p class="card-text">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ut eum similique repellat a laborum, rerum voluptates ipsam eos quo tempore iusto dolore modi dolorum in pariatur. Incidunt repellendus praesentium quae!</p>
                            <a href="/Space/Details/@row["SpaceID"]?spaceId=@row["SpaceID"]" class="btn btn-outline-success btn-sm">Réserver</a>
                            <a href="" class="btn btn-outline-danger btn-sm"><i class="far fa-heart"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script>
    function redirectToSpaceDetail (id) {
         window.location.href = "/Space/Details/ " + id + "?id=" + id;
    }
</script>
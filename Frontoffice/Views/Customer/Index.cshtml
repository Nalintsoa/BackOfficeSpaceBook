@model Frontoffice.ViewModels.CustomerViewModel

@{
    <section class="section about-section gray-bg" id="about">
        <div class="container">
            <div class="row align-items-center flex-row-reverse">
                <div class="col-lg-6">
                    <div class="about-text go-to">
                        <div id="customer">
                            <h3 class="dark-color">Espace client</h3>
                            <h6 class="theme-color lead">Voici vos informations enregistrées</h6>
                            <div class="row about-list">
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Nom</label>
                                        <p>@Model.Customer.CustomerName</p>
                                    </div>
                                    <div class="media">
                                        <label>Adresse mail</label>
                                        <p>@Model.Customer.CustomerEmail</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Prénoms</label>
                                        <p>@Model.Customer.CustomerFirstname</p>
                                    </div>
                                    <div class="media">
                                        <label>Phone</label>
                                        <p>@Model.Customer.CustomerPhone</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive" id="bookings" style="display: none">
                            <table class="table text-nowrap">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Date de début</th>
                                        <th>Date de fin</th>
                                        <th>Jours</th>
                                        <th>Salle</th>
                                        <th>P.U.</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model.Bookings)
                                    {
                                        <tr>
                                            <td>
                                                @if (booking.IsValidated == true)
                                                {
                                                    <i class="fa-solid fa-check fa-sm" style="color: #4d934d;"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa-solid fa-xmark fa-sm" style="color:red"></i>
                                                }
                                            </td>
                                            <td>@booking.BookingDate</td>
                                            <td>@booking.BookingEndDate</td>
                                            <td>@booking?.DateDiff</td>
                                            <td>@booking.Space.SpaceName</td>
                                            <td>@booking.Space.SpacePrice.ToString("N1") Ar</td>
                                            <td>@booking.BookingPrice?.ToString("N1") Ar</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <div class="d-flex">
                                    <div>
                                        <button class="btn btn-light d-flex align-items-center" onclick="toggleBookings()">
                                            <div class="ms-2">Mes réservations</div>
                                        </button>
                                    </div>
                                    <div class="ms-2">
                                        <form asp-action="Logout" asp-controller="Customer">
                                            <button class="btn btn-danger d-flex align-items-center" type="submit">
                                                <i class="fa fa-power-off"></i>
                                                <div class="ms-2">Se déconnecter</div>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-avatar">
                        <img src="~/assets/avatar7.png" title="" alt="">
                    </div>
                </div>
            </div>
            <div class="counter">
                <div class="row">
                    <div class="col-6 col-lg-3">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="500" data-speed="500">500</h6>
                            <p class="m-0px font-w-600">Locations</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="150" data-speed="150">150</h6>
                            <p class="m-0px font-w-600">Réservation en cours</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="850" data-speed="850">850</h6>
                            <p class="m-0px font-w-600">En attente de validation</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="count-data text-center">
                            <h6 class="count h2" data-to="190" data-speed="190">190</h6>
                            <p class="m-0px font-w-600">Telephonic Talk</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}

<script>
    function toggleBookings () {
        $("#bookings").toggle();
        $("#customer").toggle();
    }
</script>

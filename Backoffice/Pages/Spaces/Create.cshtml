@page
@model Backoffice.Pages.Spaces.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nouvelle salle</h1>

<div>
    <a asp-page="Index" class="btn btn-light d-flex">
        <div><i class="fa fa-sm fa-outdent"></i></div>
        <div class="ms-2">Revenir à la liste</div>
    </a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Space.SpaceName" class="control-label"></label>
                <input asp-for="Space.SpaceName" class="form-control" />
                <span asp-validation-for="Space.SpaceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Space.SpaceCapacity" class="control-label"></label>
                <input asp-for="Space.SpaceCapacity" class="form-control" />
                <span asp-validation-for="Space.SpaceCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Space.SpacePrice" class="control-label"></label>
                <input asp-for="Space.SpacePrice" class="form-control" />
                <span asp-validation-for="Space.SpacePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Space.SpaceDescription" class="control-label"></label>
                <input asp-for="Space.SpaceDescription" class="form-control" />
                <span asp-validation-for="Space.SpaceDescription" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                @* <input asp-for="Space.SpacePrice" class="form-control" /> *@
                <input type="file" id="Filename" name="Filename" />
                <span asp-validation-for="Space.Filename" class="text-danger"></span>
            </div>

            <div class="form-group text-end">
                <button type="submit" value="Enregistrer" class="btn btn-success d-flex float-end">
                    <div><i class="fa fa-sm fa-save" style="color:white"></i></div>
                    <div class="ms-2">Enregistrer</div>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

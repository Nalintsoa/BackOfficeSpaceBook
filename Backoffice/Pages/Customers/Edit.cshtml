@page
@model Backoffice.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier un client</h1>

<div>
    <a asp-page="Index" class="btn btn-light d-flex">
        <div><i class="fa fa-sm fa-outdent"></i></div>
        <div class="ms-2">Revenir à la liste</div>
    </a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.CustomerID" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.CustomerName" class="control-label"></label>
                <input asp-for="Customer.CustomerName" class="form-control" />
                <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerFirstname" class="control-label"></label>
                <input asp-for="Customer.CustomerFirstname" class="form-control" />
                <span asp-validation-for="Customer.CustomerFirstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.CustomerEmail" class="control-label"></label>
                <input asp-for="Customer.CustomerEmail" class="form-control" />
                <span asp-validation-for="Customer.CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.CustomerPassword" class="control-label"></label>
                <input asp-for="Customer.CustomerPassword" class="form-control" />
                <span asp-validation-for="Customer.CustomerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerPhone" class="control-label"></label>
                <input asp-for="Customer.CustomerPhone" class="form-control" />
                <span asp-validation-for="Customer.CustomerPhone" class="text-danger"></span>
            </div>
            <div class="form-group text-end">
                <button type="submit" value="Enregistrer" class="btn btn-success d-flex float-end">
                    <div><i class="fa fa-sm fa-save" style="color:white"></i></div>
                    <div class="ms-2">Enregistrer</div>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
